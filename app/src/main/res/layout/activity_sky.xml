<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pinardagdas.jigsawpuzzle.SkyActivity"
    android:background="@color/colorAccent">

    <Button
        android:text="Geri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orj"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/image3kucuk"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/orj"
        android:layout_alignEnd="@+id/orj"
        android:layout_marginBottom="19dp"
        android:id="@+id/r3" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/image1kucuk"
        android:layout_alignTop="@+id/r3"
        android:layout_toRightOf="@+id/r3"
        android:layout_toEndOf="@+id/r3"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/r1" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/image4kucuk"
        android:layout_alignTop="@+id/r1"
        android:layout_toRightOf="@+id/r1"
        android:layout_toEndOf="@+id/r1"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/r4" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/image2kucuk"
        android:layout_alignTop="@+id/r4"
        android:layout_toRightOf="@+id/r4"
        android:layout_toEndOf="@+id/r4"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/r2" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/r6"
        android:layout_alignTop="@+id/r5"
        android:layout_toRightOf="@+id/r1"
        android:layout_toEndOf="@+id/r1" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="62dp"
        android:id="@+id/r5"
        android:layout_below="@+id/orj"
        android:layout_toLeftOf="@+id/r4"
        android:layout_toStartOf="@+id/r4" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/r7"
        android:layout_below="@+id/r5"
        android:layout_alignLeft="@+id/r5"
        android:layout_alignStart="@+id/r5" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/r8"
        android:layout_below="@+id/r5"
        android:layout_toRightOf="@+id/r7"
        android:layout_toEndOf="@+id/r7" />


</RelativeLayout>
