<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pinardagdas.jigsawpuzzle.ListActivity">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/butunimage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton" />

    <TextView
        android:text="Gökyüzü"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textColor="#009688"
        android:textSize="20sp" />

    <TextView
        android:text="Kedi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kittenButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:textColorLink="#009688"
        android:textSize="20sp"
        android:textColor="#009688" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/butunmasseyhall"
        android:id="@+id/hallButton"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/kittenButton"
        android:layout_alignStart="@+id/kittenButton" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/butunkitten"
        android:id="@+id/kittenButton"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:text="Massey Hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#009688"
        android:textSize="20sp"
        android:layout_below="@+id/hallButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
